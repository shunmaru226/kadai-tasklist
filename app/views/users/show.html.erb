<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item">My Task</li>
    </ul>       
    
     <table class="table table-striped">
        <thead>
          <tr>
            <th>id</th>
            <th>ステータス</th>
            <th>タスク内容</th>
          </tr>
        </thead>
        
        <tbody>
          <% @tasks.each do |task| %>
           <tr>
              <td><%= link_to task.id, task %></td>
              <td><%= task.status %></td>
              <td><%= task.content %></td>
            </tr>
          <% end %>
        </tbody>
      </table>


  </div>
</div>