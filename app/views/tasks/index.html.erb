<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
    
      <div>
        <h1>タスク一覧</h1>
        <%= link_to '新規メッセージの投稿', new_task_path, class: "btn btn-primary" %>
      </div>
      
      <% if @tasks.any? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>id</th>
            <th>ステータス</th>
            <th>タスク内容</th>
          </tr>
        </thead>
        
        <tbody>
          <% @tasks.each do |task| %>
           <tr>
              <td><%= link_to task.id, task %></td>
              <td><%= task.status %></td>
              <td><%= task.content %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <div>
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    <% end %>

<% else %>
<% end %>